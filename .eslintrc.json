{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
    "node": true,
    "jest/globals": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"no-delete-var": "error",
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"no-unreachable": "warn",
		"no-unused-vars": "warn",
		"no-console": "warn",
		"constructor-super": "warn",
		"valid-typeof": "warn",
		"quotes": ["warn", "single"],
		"indent": ["error", 2, { "SwitchCase": 1 }],
		"semi": "warn",
		"no-mixed-spaces-and-tabs": "warn"
	},
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": [
    "jest"
  ],
	"settings": {
		"react": {
			"version": "16.5.2"
		}
	}
}
